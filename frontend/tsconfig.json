{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "allowJs": true,
        "lib": [ "es2017", "dom", "dom.iterable"  ],
        "typeRoots": [
            "./types"
        ]
    },
    "include": [
        "./src/**/*", 
    ]
}